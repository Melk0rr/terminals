{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "foreground": "#fff",
          "background": "#461466",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "properties": {
            "debian": "\uf306",
            "windows": "\uf17a"
          }
        },
        {
          "type": "session",
          "style": "diamond",
          "foreground": "#fff",
          "foreground_templates": [
            "{{if .Root}}#ff385d{{end}}"
          ],
          "background": "#461466",
          "trailing_diamond": "\ue0b0",
          "template": " {{if .Root}}{{ .UserName }}üíÄ{{ .HostName }} {{else}}{{ .UserName }}üåê{{ .HostName }} {{end}} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "transparent",
          "background": "#00a3c9",
          "template": " {{ .Path }} ",
          "properties": {
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "üè†",
            "mapped_locations": {
              "D:\\Projets\\01_IT": "üíª",
              "D:\\Projets\\01_IT\\01_Dev": "üìú",
              "D:\\Projets\\01_IT\\01_Dev\\01_C-Cpp": "\ue61d",
              "D:\\Projets\\01_IT\\01_Dev\\02_Web": "\ue60e",
              "D:\\Projets\\01_IT\\01_Dev\\03_Powershell": "\ue795",
              "D:\\Projets\\01_IT\\01_Dev\\04_Python": "\ue606",
              "D:\\Sapere": "üìñ"
            },
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#193549",
          "background": "#e0da1f",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ff9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
            "{{ if gt .Ahead 0 }}#89d1dc{{ end }}",
            "{{ if gt .Behind 0 }}#f17c37{{ end }}"
          ],
          "template": " {{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true
          }
        },
        {
          "type": "exit",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#fff",
          "background": "#910000",
          "template": "<transparent> \uf12a</> {{ .Meaning }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#fff",
          "template": " ‚åõ {{ .FormattedMs }}",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "python",
          "style": "diamond",
          "foreground": "#003544",
          "background": "#0087D8",
          "leading_diamond": "\ue0b2",
          "template": " \ue235 {{ .Venv }} ",
          "properties": {
            "display_mode": "context",
            "fetch_virtual_env": true
          }
        },
        {
          "type": "time",
          "style": "powerline",
          "powerline_symbol": "\ue0b4",
          "foreground": "#fff",
          "background": "#ec008c",
          "trailing_diamond": "\ue0b4 ",
          "template": " üïì {{ .CurrentDate | date .Format }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#ffffff",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ff0000{{ end }}"
          ],
          "template": "‚ùØ ",
          "properties": {
            "always_enabled": true
          }
        }
      ],
      "newline": true
    }
  ]
}
