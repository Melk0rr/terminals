{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "console_title_template": "{{ .Shell }} in {{ .Folder }}",
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "os",
            "style": "diamond",
            "leading_diamond": "\ue0b6",
            "foreground": "#fff",
            "background": "#c44569",
            "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
            "properties": {
              "debian": "\uf306",
              "windows": "\uf17a"
            }
          },
          {
            "type": "session",
            "style": "diamond",
            "foreground": "#fff",
            "foreground_templates": [
              "{{if .Root}}#ff385d{{end}}"
            ],
            "background": "#c44569",
            "template": " {{if .Root}}{{ .UserName }}üíÄ{{ .HostName }} {{else}}{{ .UserName }}@{{ .HostName }} {{end}} "
          },
          {
            "type": "path",
            "style": "powerline",
            "powerline_symbol": "\ue0b0",
            "foreground": "transparent",
            "background": "#f78fb3",
            "template": " {{ .Path }} ",
            "properties": {
              "folder_separator_icon": " \ue0b1 ",
              "folder_icon": "\uea7c",
              "home_icon": "\uf015 ",
              "max_depth": 2,
              "mapped_locations": {
              },
              "style": "agnoster_short"
            }
          },
          {
            "type": "git",
            "style": "powerline",
            "powerline_symbol": "\ue0b0",
            "foreground": "#193549",
            "background": "#e0da1f",
            "background_templates": [
              "{{ if or (.Working.Changed) (.Staging.Changed) }}#ff9248{{ end }}",
              "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
              "{{ if gt .Ahead 0 }}#89d1dc{{ end }}",
              "{{ if gt .Behind 0 }}#f17c37{{ end }}"
            ],
            "template": " {{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
            "properties": {
              "fetch_stash_count": true,
              "fetch_status": true
            }
          },
          {
            "type": "exit",
            "style": "powerline",
            "powerline_symbol": "\ue0b0",
            "foreground": "#fff",
            "background": "#910000",
            "template": "<transparent> \uf12a</> {{ .Meaning }} "
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "right",
        "segments": [
          {
            "type": "executiontime",
            "style": "powerline",
            "background": "#86BBD8",
            "foreground": "#ffffff",
            "invert_powerline": true,
            "powerline_symbol": "\ue0b2",
            "template": "‚åõ{{ .FormattedMs }} ",
            "properties": {
              "always_enabled": true
            }
          },
          {
            "type": "time",
            "style": "diamond",
            "invert_powerline": true,
            "foreground": "#fff",
            "background": "#33658A",
            "trailing_diamond": "\ue0b4",
            "template": " üïì {{ .CurrentDate | date .Format }} "
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "exit",
            "style": "plain",
            "foreground": "#ffffff",
            "foreground_templates": [
              "{{ if gt .Code 0 }}#ff0000{{ end }}"
            ],
            "template": "‚ùØ ",
            "properties": {
              "always_enabled": true
            }
          }
        ],
        "newline": true
      }
    ]
  }
